{
  "containers": [
    {
      "name": "nginx",
      "image": "nginx:latest",
      "files": [
        {
          "guest_path": "/etc/nginx/conf.d/default.conf",
          "local_path": "nginx.conf"
        }
      ],
      "depends_on": [
        {
          "name": "myapp",
          "condition": "healthy"
        }
      ],
      "mounts": [
        {
          "name": "myshareddir",
          "path": "/my-shared-dir"
        }
      ]
    },
    {
      "name": "myapp",
      "image": "ealen/echo-server",
      "healthchecks": [
        {
          "exec": {
            "command": [
              "true"
            ]
          }
        }
      ],
      "mounts": [
        {
          "name": "myshareddir",
          "path": "/my-shared-dir"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "myshareddir"
    }
  ]
}
